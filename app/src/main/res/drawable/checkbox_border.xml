<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke android:width="5dp" android:color="@color/blue"/> <!-- Borde azul cuando est치 marcado -->
            <solid android:color="@android:color/transparent"/> <!-- Fondo transparente cuando est치 marcado -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <stroke android:width="5dp" android:color="@color/blue" /> <!-- Borde azul cuando no est치 marcado -->
            <solid android:color="@android:color/transparent"/> <!-- Fondo transparente cuando no est치 marcado -->
        </shape>
    </item>
</selector>