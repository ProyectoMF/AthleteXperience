<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondologgin"
    android:orientation="vertical"
    android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/bt_back_personal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/orangeLight"
            android:src="@drawable/ic_arrowback" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/bt_next_personal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/orangeLight"
            android:src="@drawable/ic_arrownext" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="55dp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/orangeDark" />

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="5dp"
            app:cardBackgroundColor="@color/orange" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/icon_sexo" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/orangeDark"
            app:cardCornerRadius="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/bt_hombre"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/orange"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/bt_mujer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/hombre"
                        android:textColor="@color/white"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/bt_mujer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/orangeDark"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/bt_hombre"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/mujer"
                        android:textColor="@color/white"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/editTextDateFechaNacimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/icon_calendario" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#000000"
            android:hint="Fecha de nacimiento"
            android:inputType="date"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/editTextNumberSignedAltura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/icon_altur" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#000000"
            android:hint="Altura"
            android:inputType="numberSigned"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/editTextNumberDecimalPeso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/icon_pes" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#000000"
            android:clickable="false"
            android:hint="Peso"
            android:inputType="numberDecimal"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/numberPickerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:orientation="horizontal">

            <!-- NumberPicker para el día -->
            <NumberPicker
                android:id="@+id/numberPickerDia"
                android:layout_width="115dp"
                android:layout_height="wrap_content" />


            <!-- NumberPicker para el mes -->
            <NumberPicker
                android:id="@+id/numberPickerMes"
                android:layout_width="115dp"
                android:layout_height="wrap_content" />

            <!-- NumberPicker para el año -->
            <NumberPicker
                android:id="@+id/numberPickerAnio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <!-- Botones Aceptar y Cancelar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonAceptarFechaNacimiento"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#FFC107"
                android:text="Aceptar" />

            <Button
                android:id="@+id/buttonCancelarFechaNacimiento"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFC107"
                android:text="Cancelar" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/numberPickerAlturaLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- NumberPicker para la altura -->
        <NumberPicker
            android:id="@+id/numberPickerAltura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Botones Aceptar y Cancelar para la altura -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonAceptarAltura"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#FFC107"
                android:text="Aceptar" />

            <Button
                android:id="@+id/buttonCancelarAltura"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFC107"
                android:text="Cancelar" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/numberPickerPesoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- NumberPicker para el peso -->
        <NumberPicker
            android:id="@+id/numberPickerPeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Botones Aceptar y Cancelar para el peso -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonAceptarPeso"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#FFC107"
                android:text="Aceptar" />

            <Button
                android:id="@+id/buttonCancelarPeso"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFC107"
                android:text="Cancelar" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
