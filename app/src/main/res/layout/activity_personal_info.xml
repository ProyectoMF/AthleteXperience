<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">


    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group"
        android:layout_width="378dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.277"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="25dp"
        >


        <ImageView
            android:layout_width="48dp"
            android:layout_height="58dp"
            android:src="@drawable/icon_sexo"
            android:paddingEnd="10dp"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_hombre"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Hombre"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:chipBackgroundColor="@color/orange" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_mujer"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Mujer"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:chipBackgroundColor="@color/orange" />

    </com.google.android.material.chip.ChipGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="58dp"
            android:paddingEnd="10dp"
            android:src="@drawable/icon_calendario" />

        <EditText
            android:id="@+id/editTextDateFechaNacimiento"
            android:layout_width="317dp"
            android:layout_height="52dp"
            android:backgroundTint="#FF9800"
            android:hint="Fecha de nacimiento"
            android:inputType="date"
            android:textColor="@color/white"
            android:textColorHint="@color/white"/>
    </LinearLayout>

    <NumberPicker
        android:id="@+id/heightPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="550dp"

        />

    <NumberPicker
        android:id="@+id/weightPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="550dp"
        android:textColor="@color/white"
        android:format="%.1f"
        />
</LinearLayout>

