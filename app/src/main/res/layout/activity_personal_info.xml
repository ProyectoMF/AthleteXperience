<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/bt_back_personal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/orange"
            android:src="@drawable/ic_arrowback" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/bt_next_personal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/orange"
            android:src="@drawable/ic_arrownext" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_primero"
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/orangeDark" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_segundo"
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/orange" />

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="5dp"
            app:cardBackgroundColor="@color/orangeDark" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/icon_sexo" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/orangeDark"
            app:cardCornerRadius="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/bt_hombre"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/orange"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toStartOf="@+id/bt_mujer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/hombre"
                        android:textColor="@color/white"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/bt_mujer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/orangeDark"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/bt_hombre"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/mujer"
                        android:textColor="@color/white"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ly_fechaNacimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/icon_calendario" />

        <EditText
            android:id="@+id/et_fechaNacimiento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:paddingStart="15dp"
            android:hint="@string/fechaNacimiento"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:backgroundTint="@color/orange"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_altura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/icon_altura" />

        <EditText
            android:id="@+id/et_altura"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:paddingStart="15dp"
            android:hint="@string/altura"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:backgroundTint="@color/orange"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="65dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/icon_peso" />

        <EditText
            android:id="@+id/et_peso"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:paddingStart="15dp"
            android:hint="@string/pesoAcutal"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:backgroundTint="@color/orange"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutNumberPickerFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- NumberPicker para el día -->
            <NumberPicker
                android:id="@+id/numberPickerDia"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:theme="@style/NumberPickerStyle"
                />


            <!-- NumberPicker para el mes -->
            <NumberPicker
                android:id="@+id/numberPickerMes"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:theme="@style/NumberPickerStyle" />

            <!-- NumberPicker para el año -->
            <NumberPicker
                android:id="@+id/numberPickerAnio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/NumberPickerStyle" />
        </LinearLayout>


        <!-- Botones Aceptar y Cancelar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonAceptarFechaNacimiento"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/orange"
                android:textColor="@color/white"
                android:text="@string/aceptar" />

            <Button
                android:id="@+id/buttonCancelarFechaNacimiento"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:textColor="@color/white"
                android:text="@string/cancelar" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutNumberPickerAltura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:visibility="gone"
        >

        <!-- NumberPicker para la altura -->
        <NumberPicker
            android:id="@+id/numberPickerAltura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/NumberPickerStyle" />

        <!-- Botones Aceptar y Cancelar para la altura -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/buttonAceptarAltura"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/orange"
                android:textColor="@color/white"
                android:text="@string/aceptar" />

            <Button
                android:id="@+id/buttonCancelarAltura"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:textColor="@color/white"
                android:text="@string/cancelar" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutNumberPickerPeso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <!-- NumberPicker para el peso -->
            <NumberPicker
                android:id="@+id/numberPickerPeso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/numberPickerPesoDecimal"
                android:theme="@style/NumberPickerStyle" />

            <NumberPicker
                android:id="@+id/numberPickerPesoDecimal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/numberPickerPeso"
                android:theme="@style/NumberPickerStyle" />

            <!-- Botones Aceptar y Cancelar para el peso -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <Button
                    android:id="@+id/buttonAceptarPeso"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/orange"
                    android:textColor="@color/white"
                    android:text="@string/aceptar"
                    />

                <Button
                    android:id="@+id/buttonCancelarPeso"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/orange"
                    android:textColor="@color/white"
                    android:text="@string/cancelar"
                    />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>





    </LinearLayout>


</LinearLayout>